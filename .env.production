# Production Environment Configuration
# Copy this to .env.production.local and update with your actual values

# Application
NODE_ENV=production
PORT=8221
HOST=0.0.0.0

# Database (choose one)
# SQLite (default)
DATABASE_URL=file:./data/kanban.db
# PostgreSQL
# DATABASE_URL=postgresql://kanban:password@postgres:5432/kanban
# MySQL
# DATABASE_URL=mysql://kanban:password@mysql:3306/kanban

# Database Connection Pool
DB_CONNECTION_POOL_MIN=5
DB_CONNECTION_POOL_MAX=20
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# Security - CHANGE THESE!
JWT_SECRET=CHANGE-THIS-TO-A-SECURE-SECRET-AT-LEAST-32-CHARACTERS-LONG
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# CORS
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_MAX=1000
RATE_LIMIT_WINDOW=1 minute

# Security Headers
DATABASE_SSL=true
TRUST_PROXY=true

# Logging
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# External Services
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=your-redis-password

# PostgreSQL (if using PostgreSQL)
POSTGRES_DB=kanban
POSTGRES_USER=kanban
POSTGRES_PASSWORD=your-postgres-password

# SSL/TLS
ACME_EMAIL=your-email@domain.com

# Monitoring
HEALTH_CHECK_ENDPOINT=/health